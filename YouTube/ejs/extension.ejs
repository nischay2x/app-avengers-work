<html lang="en">
    <style>
        body{
            display: grid;
            place-items: center;
            font-family: 'Poppins', sans-serif;
        }
        #key-hold{
            padding: 10px;
            margin: 10px auto;
            box-shadow: 2px 2px 10px gray;
            border-radius: 5px;
            width: 700px;
            max-width: 700px;
        }
    </style>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#000000" />
  
    <!-- bootstrap css -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />
  
    <!-- Poppins from google fonts  -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet" />
  
    <!-- fontawesome -->
    <script src="https://kit.fontawesome.com/95105048e2.js" crossorigin="anonymous"></script>
  
    <title>Mint Extension Key</title>
</head>
<body>
    <main>
        <h2>Here is your Extension Key</h2>
        <div id="key-hold">
            <input type="text" id="key-field" class="form-control" disabled value="<%= extensionKey%>">
        </div>
        <div id="manage-ext">
            
        </div>
    </main>
    <script defer>
        window.onload = () => {
            const manage = document.getElementById('manage-ext');
            const fieldkey = document.getElementById('key-field')
            const key = window.localStorage.getItem('extensionAccess');
            if(!key){
                window.localStorage.setItem('extensionAccess', fieldkey.value);
                manage.innerHTML = '<h4>Click On the extension and Enable It</h4>'
            } else {
                manage.innerHTML = '<h4>Extension Enabled ! Click on the extension to disable</h4>'
            }
        }
    </script>
</body>
</html>